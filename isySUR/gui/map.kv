#:kivy 1.4.0
       
<Map>:
    Button:
        id: menueBut
        text: "Menu"
        background_color: (0,0,1,1)
        size_hint: 0.15, 0.075
        pos: 0, 0
        bold: True
        on_release: root.open_menue()
        
    Button:
        id: kmlList
        text: "KML List"
        background_color: (0,0,1,1)
        size_hint: 0.15, 0.075
        pos: root.width - self.width, 0
        bold: True
        
        on_release: root.open_kmlList()
    

<Menue>:
    id: menue
    Button:
        text: 'Load SUR'
        size_hint_y: None
        height: 44
        background_color: (0,0,2,1)
        on_release: root.show_load(self)
    Button:
        text: 'Load KML'
        size_hint_y: None
        height: 44
        background_color: (0,0,2,1)
        on_release: root.show_load(self)
    Button:
        text: 'Save'
        size_hint_y: None
        height: 44
        background_color: (0,0,2,1)
        on_release: root.show_save()
    Button:
        text: 'Config'
        size_hint_y: None
        height: 44
        background_color: (0,0,2,1)
        on_release: root.show_config()

<ConfigDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        
        ScrollView:
            view: view
            size_hint_y: 0.7
            pos: root.pos
            id: view
        
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "New Rule"
                on_release: root.addRule(self)
            Button:
                text: "Load"
                on_release: root.load(self, root)
            Button:
                text: "Save"
                on_release: root.save(isConfig=True)
            Button:
                text: "Cancel"
                on_release: root.cancel()
                
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        CustomFileChooser:
            id: filechooser  
            path: '.'     

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
                
 
<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        CustomFileChooser:
            id: filechooser  
            path: '.'
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

<Toast@Label>:
    font_size: 20
    background_color:
    color: (1, 1, 1, 1)
    bold: True
    canvas.before:
        Color:
            rgba: self._background